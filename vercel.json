{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.py",
      "use": "@vercel/python"
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/backend/(.*)", "dest": "/backend/server.py" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
